<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agendor_timeline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".ViewTask"></activity>
        <activity
            android:name=".tasks.NewTask"
            android:label="@string/novatarefa"
            android:configChanges="orientation|screenSize"></activity>
        <activity
            android:name=".AgendorActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/agendor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewuserActivity"
            android:label="@string/novouser"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login"
            android:configChanges="orientation|screenSize"></activity>


    </application>

</manifest>